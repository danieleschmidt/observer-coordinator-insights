```
# Observer Coordinator Insights - Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Application settings
APP_NAME=Observer Coordinator Insights
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
API_DOCS_ENABLED=true

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
SESSION_TIMEOUT=3600
ENCRYPTION_KEY=your-encryption-key-here

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/observer_insights
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# Database Migration
ALEMBIC_CONFIG=alembic.ini

# Test Database
TEST_DATABASE_URL=sqlite:///test.db

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# Cache TTL (seconds)
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes
CACHE_TTL_LONG=3600      # 1 hour
CACHE_TTL=3600           # Default 1 hour

# =============================================================================
# BACKGROUND JOBS
# =============================================================================

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Clustering Settings
DEFAULT_CLUSTERS=4
DEFAULT_CLUSTER_COUNT=5
MAX_CLUSTERS=10
CLUSTERING_ALGORITHM=kmeans
CLUSTERING_RANDOM_STATE=42
ENABLE_ADVANCED_CLUSTERING=false

# Team Simulation
MIN_TEAM_SIZE=3
MAX_TEAM_SIZE=8
DEFAULT_SIMULATION_ITERATIONS=10

# Data Processing
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_MAX_SIZE=50MB
ALLOWED_FILE_TYPES=csv,xlsx
DATA_RETENTION_DAYS=180
MAX_DATASET_SIZE=10000
BATCH_SIZE=1000
ENABLE_REAL_TIME_PROCESSING=false

# File Storage Configuration
DATA_STORAGE_PATH=./data
TEST_DATA_PATH=./tests/fixtures

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Metrics port for Prometheus scraping
METRICS_PORT=9090

# Health check endpoint port
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_INTERVAL=30

# Performance Monitoring
PERFORMANCE_MONITORING=true
ENABLE_PROFILING=false
PROFILING_ENABLED=false

# Application performance monitoring
# APM_SERVICE_NAME=observer-coordinator-insights
# APM_ENVIRONMENT=development

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# External Service Configuration
# INSIGHTS_API_URL=https://api.insights.com
# INSIGHTS_API_KEY=your-api-key-here

# Slack webhook for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email settings for notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# =============================================================================
# PRIVACY & COMPLIANCE
# =============================================================================

# Privacy Settings
GDPR_COMPLIANCE=true
DATA_ANONYMIZATION=true
AUDIT_LOGGING=true
PII_DETECTION=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development tools (true/false)
DEV_TOOLS=true

# Auto-reload on code changes (true/false)
AUTO_RELOAD=true
ENABLE_HOT_RELOAD=true

# Testing Configuration
ENABLE_TEST_COVERAGE=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Worker Configuration
WORKER_PROCESSES=auto

# Memory Management
MAX_MEMORY_USAGE=2GB

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# API Versioning
ENABLE_API_V2=false

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Container timezone
TZ=UTC

# User ID for container (set to your local user ID to avoid permission issues)
# PUID=1000
# PGID=1000

# =============================================================================
# CI/CD SETTINGS
# =============================================================================

# Build environment
# BUILD_ENV=production

# Version tag override
# VERSION_OVERRIDE=v0.1.0

# Enable build optimizations
# OPTIMIZE_BUILD=true
```
