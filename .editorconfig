# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
max_line_length = 88
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{json,yaml,yml}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
max_line_length = 120

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{cfg,ini}]
indent_size = 4

[*.toml]
indent_size = 4

[*.xml]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.css]
indent_size = 2

[*.sql]
indent_size = 2
max_line_length = 120

[{Dockerfile*,*.dockerfile}]
indent_size = 4